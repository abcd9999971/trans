  var formans = FormApp.openById('/*出力するFromのID*/');  
  var formque = FormApp.openById('/*入力するFromのID*/');

function onFormSubmit(e) {
  var passwordsSheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName("/*参照するシート名*/"); 

  var inputPassword = e.values[1]; 
  var passwordsData = passwordsSheet.getDataRange().getValues();
  var content = "密碼錯誤或未找到對應內容"; //入力内容エラーメッセージ

  for (var i = 1; i < passwordsData.length; i++) { 
    if (passwordsData[i][0] == inputPassword) {
      content = passwordsData[i][1]; //入力と対応の内容を更新
      break;
    }
  }
  formans.setConfirmationMessage(content); //入力するFromの回答メッセージに更新
}



//送信されたらonFormSubmit関数実行
function setupTrigger() {
  ScriptApp.newTrigger('onFormSubmit')
    .forForm(formque)
    .onFormSubmit()
    .create();
} 

//入力するFromの回答メッセージ一回見られたら、回答メッセージ更新
function resetContent(){
  Utilities.sleep(5000)
  formans.setConfirmationMessage("請重新輸入查詢表單");
}

//送信されたらresetContent関数実行
function resetTrigger() {

  ScriptApp.newTrigger('resetContent')
    .forForm(formans)
    .onFormSubmit()
    .create();
}
